[flake8]
ignore =
    # closing bracket is missing indentation
    E133,
    # line break before binary operator
    W503,
    # code comments
    E800,
    # lambda expressions
    E731,
    # dict() calls
    C408,
extend-ignore =
    # colons should not have any space before them, not black-compatible
    E203,
exclude =
    .gitignore
max-line-length = 100
enable-extensions =
    # Logging violations such as fstrings, exceptions, etc. (default is version dependent)
    G
